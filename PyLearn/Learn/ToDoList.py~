import sys
import pygame as pg
import time

def runTime():
    pass

def drawScreen():
    # khoi tao pygame
    pg.init()

    # kiểm tra xem cơ sở pygame đa da khoi tao chua
    is_initialized = pg.get_init()

    # hiện thông báo là True nếu khoi tao thanh cong
    print('Is pygame modules initialized:', is_initialized)

    # tạo tiêu đề cho cửa sở pygame
    pg.display.set_caption('My first game')

    # khởi tạo cửa số với chiều dài và chiều rộng
    width_of_window, height_of_window = 400, 300
    screen = pg.display.set_mode((width_of_window,height_of_window), pg.RESIZABLE)

    # khởi tạo font
    font = pg.font.Font(None, 30)

    # khởi tạo text
    text = font.render('Hello World', True, (0, 0, 0))

    # hien thi text
    screen.blit(text, (width_of_window / 2 - text.get_width() / 2, height_of_window / 2 - text.get_height() / 2))
    
    # khóa cửa sở pygame
    pg.display.update()

    # chay vong lap để vẽ khóa cửa sở pygame
    running = True
    while running:
        # vong lap cập nhật với event
        for event in pg.event.get():
            # kiểm tra xem nguoi dung nhan vao dấu x không
            if event.type == pg.QUIT:
                # nguoi dung nhan vao dấu x thì đóng cửa số
                print('User quit the game')
                running = False

if __name__ == "__main__":
    drawScreen()
